<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/addressesList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="192dp"/>

    <Button
        android:text="@string/close"
        android:background="@null"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walletAddressesClose"
        app:layout_constraintTop_toBottomOf="@+id/addressesList"
        app:layout_constraintRight_toRightOf="@+id/addressesList"
        app:layout_constraintLeft_toLeftOf="@+id/addressesList"/>
</android.support.constraint.ConstraintLayout>