<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Remove Ads"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:id="@+id/removeAdsButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="32dp"/>
    <Button
            android:text="Remove App Fees"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/removeFeesButton"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/removeAdsButton"/>

    <TextView
            android:text="100 SC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeAdsCostText"
            android:textColor="@color/colorPrimary"
            app:layout_constraintRight_toLeftOf="@+id/removeAdsButton"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/removeAdsButton"
            app:layout_constraintBottom_toBottomOf="@+id/removeAdsButton"/>

    <TextView
            android:text="100 SC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeFeesCostText"
            app:layout_constraintRight_toRightOf="@+id/removeAdsCostText"
            app:layout_constraintLeft_toLeftOf="@+id/removeAdsCostText"
            app:layout_constraintTop_toTopOf="@+id/removeFeesButton"
            app:layout_constraintBottom_toBottomOf="@+id/removeFeesButton"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>