<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/nodesListRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/nodesList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/selectedMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fab_size_normal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/selected_items_bg"
        android:elevation="3dp"
        android:orientation="horizontal"
        app:layout_behavior="com.vandyke.sia.ui.common.SnackbarRaiseBehavior">

        <TextView
            android:id="@+id/numSelected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="0 items"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/multiMove"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:src="@drawable/ic_move_to_inbox"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/multiDownload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:src="@drawable/ic_file_download"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/multiDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:src="@drawable/ic_delete"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/multiDeselect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:paddingEnd="16dp"
            android:paddingStart="8dp"
            android:src="@drawable/ic_clear"
            android:tint="@android:color/darker_gray" />

    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabFilesMenu"
        android:layout_width="@dimen/fab_size_normal"
        android:layout_height="@dimen/fab_size_normal"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_add"
        app:layout_behavior="com.vandyke.sia.ui.common.SnackbarRaiseBehavior"
        app:menu_colorNormal="?attr/colorPrimary"
        app:menu_colorPressed="?attr/colorPrimaryDark"
        app:menu_colorRipple="?attr/colorPrimaryDark">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabAddFile"
            android:layout_width="@dimen/fab_size_normal"
            android:layout_height="@dimen/fab_size_normal"
            android:src="@drawable/ic_file"
            app:fab_colorNormal="?attr/colorPrimary"
            app:fab_colorPressed="?attr/colorPrimaryDark" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabAddDir"
            android:layout_width="@dimen/fab_size_normal"
            android:layout_height="@dimen/fab_size_normal"
            android:src="@drawable/ic_folder"
            app:fab_colorNormal="?attr/colorPrimary"
            app:fab_colorPressed="?attr/colorPrimaryDark" />

    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>