<?xml version="1.0" encoding="utf-8"?>
<!--TODO: top/bottom spacing of this could be better. Using padding in the parent means that the ripple doesn't expand all the way to the top/bottom of it-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/module_storage_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="4dp"
    app:layout_constraintTop_toBottomOf="@+id/module_storage_list">

    <TextView
        android:id="@+id/module_storage_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Internal storage"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/module_storage_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/module_storage_header"
        android:layout_below="@+id/module_storage_header"
        android:layout_marginEnd="16dp"
        android:text="Size"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="18sp" />
</RelativeLayout>