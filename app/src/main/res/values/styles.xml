<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Amoled" parent="AppTheme.Light">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:itemBackground">@android:color/black</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Amoled</item>
    </style>

    <style name="AppTheme.Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Custom</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DialogTheme.Amoled" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
    </style>

    <style name="DialogTheme.Custom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--TODO: figure out how to make buttons at bottom green. Also some dialog text colors are handled manually rn...-->
    </style>

    <!--startup splash scrappThemeheme-->
    <style name="splashScreenTheme" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
