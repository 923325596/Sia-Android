<resources>

    <style name="AppTheme.DayNight" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorButtonNormal">@color/negative</item>
    </style>

    <style name="AppTheme.DayNight.OldSiaColors">
        <item name="colorPrimary">@color/colorPrimaryOld</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOld</item>
        <item name="colorAccent">@color/colorAccentOld</item>
    </style>

    <!--startup splash screen-->
    <style name="splashScreenTheme" parent="AppTheme.DayNight">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="cardStyle">
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>
    <style name="cardFooterStyle">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:alpha">0.1</item>
    </style>
</resources>
