<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!--Dark Mode theme-->
    <!--TODO: black action bar text/icons, and black button text-->
    <style name="AppTheme.Dark" parent="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:itemBackground">@color/backgroundDark</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Dark</item>
        <!--<item name="android:textAppearanceButton">@style/DarkButton</item>-->
    </style>

    <style name="AppTheme.Amoled" parent="AppTheme.Light">
        <!--<item name="android:windowBackground">@drawable/stars</item>-->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:itemBackground">@android:color/black</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Amoled</item>
        <!--<item name="android:textAppearanceButton">@style/DarkButton</item>-->
    </style>

    <style name="AppTheme.Custom" parent="AppTheme.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Custom</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--Dialog theme for dark mode-->
    <style name="DialogTheme.Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/backgroundDark</item>
    </style>

    <style name="DialogTheme.Amoled" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColorAlertDialogListItem">@android:color/white</item>
    </style>

    <style name="DialogTheme.Custom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--TODO: figure out how to make buttons at bottom green. Also some dialog text colors are handled manually rn...-->
    </style>

    <!--TODO: Button theme for dark mode. it makes text super small for some reason-->
    <style name="DarkButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/backgroundDark</item>
    </style>

    <!--startup splash screen theme-->
    <style name="splashScreenTheme" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!--TODO: idk if setting primarydark color is working-->
    </style>
</resources>
